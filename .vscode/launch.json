    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: WebUI/Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src.webui.raspifmwebapp",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },        
        {
            "name": "Python: TouchUI",
            "type": "python",
            "request": "launch",
            "module": "src.touchui.raspifmtouchapp",
            "justMyCode": true
        },
        {
            "name": "Python: Core Module",
            "type": "python",
            "request": "launch",
            "module": "src.core.raspifmcore",
            "justMyCode": true
        }
    ]
}